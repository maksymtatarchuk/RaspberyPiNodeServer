<div class="server-data-bar d-flex justify-content-end server-data-bar-hidden sys-text">
    <span class="server-sys-param d-flex">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="server-data-monitoring" status="off">
            <label class="form-check-label" for="exampleCheck1">Auto</label>
        </div>
    </span>
    <span class="btn-group" role="group">
        <button id="btnGroupDrop1" type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Shell
        </button>
        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
            <a class="dropdown-item sys-shell-command" id="sys-shell-reboot" href="#" command="">Reboot</a>
            <a class="dropdown-item sys-shell-command" id="sys-shell-pull" href="#" command="">Git pull</a>
            <a class="dropdown-item sys-shell-command" id="sys-shell-shutdown" href="#" command="">Shutdown</a>
        </div>
    </span>
    <% if (serverUpTime) {%>
    <span class="server-sys-param js-timer">
        Uptime:
        <% for (let key in serverUpTime) { %>
                <span class="js-server-up-time badge badge-primary"><%= serverUpTime[key] + ' ' + key %></span>
        <% } %>
    </span>
    <% } %>
    <% if (cpuTemperature !== 'Raspberry Pi only!') {%>
    <span class="server-sys-param">
        Temperature:
        <span class="js-server-temp badge badge-<%= cpuTemperature.status %>"><%= cpuTemperature.value %></>
    </span>
    <% } %>
    <% if (sysArch) {%>
    <span class=" server-sys-param">
        Sys.arch.:
        <span class="badge badge-light"><%= sysArch %></span>
    </span>
    <% } %>
</div>
<div class="server-data-bar-hide-btn sys-text">
    Show
</div>